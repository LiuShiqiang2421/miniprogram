/* pages/my/my.wxss */
.color
{
	width: 100%;
	height: 250rpx;
	position: relative;
	background-color: #ffbb40;
}

.content
{
	width: 90%;
	position: absolute;
	top: 80rpx;
	left: 38rpx;
}

.content-top
{
	background-color: #fff;
	width: 100%;
	height: 300rpx;
	border: 1rpx solid #eee;
	border-radius: 20rpx;
	position: relative;
}

.nickname-image
{
	position: absolute;
	top: -28rpx;
	left: 51rpx;
	width: 85%;
	display: flex;
	justify-content: space-between;
}

.nickname
{
	font-weight: 900rpx;
	font-family: '黑体';
	font-size: 48rpx;
	line-height: 150rpx;
	color: #515151;	
	overflow: scroll;
}

.nickname-image image
{
	width: 150rpx;
	height: 150rpx;
}

.user-info
{
	position: absolute;
	top: 170rpx;
	height: 130rpx;
	width: 100%;
	display: flex;
	justify-content: space-evenly;
}

.info-detail
{
	display: flex;
	flex-direction: column;
	justify-content: space-evenly;
}
.detail-value
{
	font-weight: 800;
	font-size: 40rpx;
}

.content-bottom
{
	margin-top: 30rpx;
	box-shadow: 1rpx 1rpx 15rpx #ddd;
}

.func
{
	display: flex;
	justify-content: space-between;
	padding: 40rpx;
}

.func-info
{
	display: flex;
}

.func-info view
{
	line-height: 50rpx;
}

.func-info-image
{
	width: 50rpx;
	height: 50rpx;
	margin-right: 20rpx;
}

.right-image
{
	width: 28rpx;
	height: 28rpx;
	margin-top: 10rpx;
}

.hoverLogout
{
	background-color: #ddd;
}